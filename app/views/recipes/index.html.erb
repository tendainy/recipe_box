<div class='container'>
  <h1>Recipes</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tags</th>
        <th>Rating</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, recipe %></td>
          <td><%= recipe.tags.map(&:name).join(", ") %></td>
          <%
=begin%>
 <td><%= recipe.ratings.average(:value).to_f.round(1) if recipe.ratings.any? %></td>
<%
=end%>
          <td><%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-primary" %></td>
          <td><%= link_to "Delete", recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %></td>
          <%
=begin%>
 <td><%= link_to "Rate", new_recipe_rating_path(recipe), class: "btn btn-secondary" %></td>
<%
=end%>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-success" %>
</div>
